<div class="mb-3 card card-body">
  <%= tweet.body %>
  <div class="me-4">
    <%= image_tag twitter.twitter_account.image, class: "rounded-circle" %>
    <%= link_to "@#{twitter.twitter_account.username}", "https://twitter.com/#{twitter.twitter_account.username}", target: :_blank %>

    <% if tweet.published? %>
      <%= link_to "View Tweet", "https://twitter.com/#{tweet.twitter_account.username}/status/#{tweet.tweet_id}", target: :blank %>
    <% else %>
      Scheduled for <%= tweet.publish_at %>
      <%= link_to "Edit Tweet", edit_tweet_path(tweet) %>
    <% end %>
  </div>
</div>